{
  "name": "ai-development-workstation",
  "version": "1.0.0",
  "description": "AI Development Workstation - Automated Development Environment",
  "main": "dist/main/main.js",
  "scripts": {
    "build": "tsc && electron-builder",
    "dev": "concurrently \"tsc -w\" \"electron .\"",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=never"
  },
  "dependencies": {
    "@octokit/rest": "^19.0.7",
    "axios": "^1.5.0",
    "sqlite3": "^5.1.6",
    "simple-git": "^3.19.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "chalk": "^4.1.2",
    "fs-extra": "^11.1.1",
    "node-cron": "^3.0.2"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "typescript": "^5.2.2",
    "concurrently": "^8.2.0"
  },
  "build": {
    "appId": "com.ai-dev.workstation",
    "productName": "AI Development Workstation",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  }
}